name: ParkingPay Automation 

on:
  schedule:
    - cron: '0 20 * * 6'  # tous les samedis Ã  20h
  workflow_dispatch:       # permet de lancer manuellement

jobs:
  run-parkingpay:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"
      - name: Install dependencies
        run: pip install selenium
      - name: Run ParkingPay script
        run: python ParkingPay.py
        env:
          PBP_USERNAME: ${{ secrets.PBP_USERNAME }}
          PBP_PASSWORD: ${{ secrets.PBP_PASSWORD }}
